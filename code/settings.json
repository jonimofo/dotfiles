{
  /* ----------------------------------------------------------------
    THEME
  ---------------------------------------------------------------- */
  "editor.minimap.enabled": false,
  "workbench.colorTheme": "One Dark Darker",
  "window.customTitleBarVisibility": "never",

  /* ----------------------------------------------------------------
    FORMATTER
  ---------------------------------------------------------------- */
  // "[html]": {
  //   "editor.defaultFormatter": "vscode.html-language-features"
  // },
  // "[css]": {
  //   "editor.defaultFormatter": "esbenp.prettier-vscode"
  // },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[env]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },

  "editor.formatOnPaste": true,

  // PRETTIER CONF
  "prettier.semi": false,
  "prettier.tabWidth": 2,
  "prettier.useTabs": false,
  "prettier.printWidth": 80,

  "editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
  "editor.formatOnType": false, // required
  // "editor.formatOnPaste": true, // optional
  // "editor.formatOnSave": true, // optional
  "editor.formatOnSaveMode": "file", // required to format on save
  "files.autoSave": "onFocusChange", // optional but recommended
  "vs-code-prettier-eslint.prettierLast": false, // set as "true" to run 'prettier' last not first

  /* ----------------------------------------------------------------
    COLOR SYNTAX
  ---------------------------------------------------------------- */
  "files.associations": {
    "*.gs": "javascript",
    "*.yml": "yaml",
    "*.yaml": "yaml",
    "*.env": "env",
  },

  "highlight-matching-tag.enabled": false,
  "highlight-matching-tag.styles": {
    "opening": {
      "name": {
        "underline": "yellow"
      }
    }
  },
  // Display yellow line under active tab
  "workbench.colorCustomizations": {
      "tab.activeBorder": "#fff707",
      "tab.unfocusedActiveBorder": "#000000"
  },



  /* ----------------------------------------------------------------
    MISC
  ---------------------------------------------------------------- */
  "prettier.enable": false,
  "chat.instructionsFilesLocations": {
    ".github/instructions": true,
    "/tmp/postman-http-request-post-response.instructions.md": true,
    "/tmp/postman-http-request-pre-request.instructions.md": true
  },
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "redhat.telemetry.enabled": false,
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
}
